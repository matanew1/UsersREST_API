<!-- views/user.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <%- include("./header.ejs") %>
    <title>Users</title>
    <style>
      /* Style the table */
      table {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
      }

      /* Style the table headers */
      th {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
        background-color: #008CBA;
        color: white;
      }

      /* Style the table data */
      td {
        border: 1px solid #ddd;
        padding: 8px;
      }

      /* Style the table rows */
      tr:nth-child(even) {
        background-color: #f2f2f2;
      }

      /* Style the heading */
      h1 {
        color: #010a0d;
        text-align: center;
        margin-top: 50px;
      }

      /* Style the button */
      button {
        display: block;
        margin-top: 20px;
        font-size: 18px;
        color: #ffffff;
        background-color: #008CBA;
        border-radius: 5px;
        padding: 10px;
        text-decoration: none;
        width: 200px;
        margin-left: auto;
        margin-right: auto;
        border: none;
        cursor: pointer;
      }

      /* Style the button when hovered */
      button:hover {
        background-color: #57abf0;
      }

      /* Style the background color */
      body {
        font-family: Arial, sans-serif;
        background-color: #64b7d8;
      }
    </style>
  </head>
  
  <body>
    <h1>All Users</h1>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Password</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(function(user) { %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.password %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <button onclick="location.href='/api/home'">Go to Home</button>
    <%- include("./footer.ejs") %>
  </body>
</html>
